{
	"manifest_version": 2,
	"name": "KeyNav",
	"version": "1.0.0",
	"description": "Vim-inspired keyboard navigation for tabs, scrolling, and history. Also includes custom shortcuts for a few popular websites",
	"author": "rtom",
	"browser_specific_settings": {
		"gecko": {
			"id": "keynav@rtom.dev",
			"strict_min_version": "146.0",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	},
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png",
		"128": "icons/icon-128.png"
	},
	"permissions": [
		"tabs",
		"<all_urls>",
		"webRequest",
		"webRequestBlocking"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"commands": {
		"previous-tab": {
			"suggested_key": {
				"default": "Ctrl+H",
				"mac": "MacCtrl+H"
			},
			"description": "Switch to previous tab (Vim-style H)"
		},
		"next-tab": {
			"suggested_key": {
				"default": "Ctrl+L",
				"mac": "MacCtrl+L"
			},
			"description": "Switch to next tab (Vim-style L)"
		},
		"close-tab": {
			"suggested_key": {
				"default": "Ctrl+J",
				"mac": "MacCtrl+J"
			},
			"description": "Close current tab (Vim-style J)"
		},
		"new-tab": {
			"suggested_key": {
				"default": "Ctrl+K",
				"mac": "MacCtrl+K"
			},
			"description": "Open new tab (Vim-style K)"
		},
		"scroll-down-30": {
			"suggested_key": {
				"default": "Ctrl+D",
				"mac": "MacCtrl+D"
			},
			"description": "Scroll down 30% (Vim-style Ctrl+D)"
		},
		"scroll-up-30": {
			"suggested_key": {
				"default": "Ctrl+U",
				"mac": "MacCtrl+U"
			},
			"description": "Scroll up 30% (Vim-style Ctrl+U)"
		},
		"scroll-down-20px": {
			"suggested_key": {
				"default": "Ctrl+E",
				"mac": "MacCtrl+E"
			},
			"description": "Scroll down 20px (Vim-style Ctrl+E)"
		},
		"scroll-up-20px": {
			"suggested_key": {
				"default": "Ctrl+Y",
				"mac": "MacCtrl+Y"
			},
			"description": "Scroll up 20px (Vim-style Ctrl+Y)"
		},
		"go-back": {
			"suggested_key": {
				"default": "Ctrl+O",
				"mac": "MacCtrl+O"
			},
			"description": "Go back in history (Vim-style Ctrl+O)"
		},
		"go-forward": {
			"suggested_key": {
				"default": "Ctrl+I",
				"mac": "MacCtrl+I"
			},
			"description": "Go forward in history (Vim-style Ctrl+I)"
		}
	}
}
