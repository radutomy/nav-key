{
  "manifest_version": 2,
  "name": "Tab Navigator",
  "version": "1.0",
  "description": "Vim-like tab and scroll navigation",
  "permissions": ["tabs", "<all_urls>"],
  "background": { "scripts": ["background.js"], "persistent": true },
  "commands": {
    "previous-tab":    { "suggested_key": { "default": "Ctrl+H" }, "description": "Previous tab" },
    "next-tab":        { "suggested_key": { "default": "Ctrl+L" }, "description": "Next tab" },
    "close-tab":       { "suggested_key": { "default": "Ctrl+J" }, "description": "Close tab" },
    "new-tab":         { "suggested_key": { "default": "Ctrl+K" }, "description": "New tab" },
    "scroll-down-30":  { "suggested_key": { "default": "Ctrl+D" }, "description": "Scroll down 30%" },
    "scroll-up-30":    { "suggested_key": { "default": "Ctrl+U" }, "description": "Scroll up 30%" },
    "scroll-down-20px": { "suggested_key": { "default": "Ctrl+E" }, "description": "Scroll down 20px" },
    "scroll-up-20px":  { "suggested_key": { "default": "Ctrl+Y" }, "description": "Scroll up 20px" }
  }
}
